[% page.title = 'Distribution' %]

<h1>QuizSage: [% page.title %]</h1>

<p><a href="[% c.url_for('/') %]">Main Page</a></p>

<p><a href="[% c.url_for( '/meet/' _ c.param('meet_id') ) %]">Meet Page</a></p>

[% IF per_quiz.material %]<p>Material: [% per_quiz.material.label %]</p>[% END %]

[% FOR bracket IN build.brackets %]
    <h2>Bracket: [% bracket.name %]</h2>

    [% IF bracket.material %]
        <div style="
            background: white;
            border    : solid 1px silver;
            margin    : 1rem 0;
            padding   : 0 0.25rem;
        ">
            Material: <b>[% bracket.material.label %]</b>
        </div>
    [% END %]

    [% FOR set IN bracket.sets %]
        <div>
            [% FOR quiz IN set.rooms %]
                <div class="quiz_summary_box" style="width: 10rem; height: 28rem">
                    <b>Quiz: [% quiz.name %]</b>

                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Bible</th>
                            </tr>
                        </thead>
                        <tbody>
                            [% FOR query IN quiz.distribution %]
                                <tr>
                                    <td class="right">[% query.id %]</td>
                                    <td>[% query.type %]</td>
                                    <td>[% query.bible %]</td>
                                </tr>
                            [% END %]
                        </tbody>
                    </table>
                </div>
            [% END %]
        </div>
    [% END %]
[% END %]
