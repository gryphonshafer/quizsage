[% page.title = 'Provide Quiz Teams' %]

<h1>QuizSage: [% page.title %]</h1>

<p><a href="[% c.url_for('/') %]">Main Page</a></p>

<p><a href="[% c.url_for( '/meet/' _ c.param('meet') ) %]">Meet Page</a></p>

<p><a href="[% c.url_for('/meet/' _ c.param('meet') _ '/roster') %]">Roster</a></p>

<p>
    Enter the team names (in order) of the teams that are in the quiz.
    <b>
        The team names must appear exact as they do on the
        <a href="[% c.url_for('/meet/' _ c.param('meet') _ '/roster') %]">roster</a>.
    </b>
</p>

<form method="post" style="display: inline-block; vertical-align: top">
    <fieldset>
        <legend>Team Names (In Order)</legend>
        <textarea
            rows="5"
            cols="16"
            name="teams"></textarea>
    </fieldset>

    <br>

    <input type="submit" value="Run Quiz">

    <input type="hidden" name="meet"    value="[% c.param('meet')    %]">
    <input type="hidden" name="bracket" value="[% c.param('bracket') %]">
    <input type="hidden" name="quiz"    value="[% c.param('quiz')    %]">
</form>

<div style="
    display       : inline-block;
    vertical-align: top;
    margin-left   : 3em;
">
    <p>
        Quiz: <b>[% quiz.name %]</b><br>
        Room: <b>[% quiz.room %]</b><br>
        Start: <b>[% quiz.schedule.start_time %]</b>
    </p>

    <p>Teams should be from:</p>

    <ul>
        [% FOR team IN quiz.roster %]
            <li>[%
                IF team.position == 1;
                    '1st';
                ELSIF team.position == 2;
                    '2nd';
                ELSIF team.position == 3;
                    '3rd';
                ELSE;
                    team.position _ 'th';
                END;

                IF team.quiz;
                    ' in ' _ team.quiz;
                ELSE;
                    ' of ' _ team.bracket;
                END;
            %]</li>
        [% END %]
    </ul>
</div>

<div style="
    display       : inline-block;
    vertical-align: top;
    margin-left   : 3em;
">
    <p>Teams:</p>
    <ul>
        [% FOR team IN teams %]
            <li>[% team %]</li>
        [% END %]
    </ul>
</div>
